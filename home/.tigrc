# main viewの左端にコミットIDを表示する
set main-view = line-number:true,interval=10 date id author commit-title:graph=yes,refs=yes
# デフォルト
# set main-view = date author commit-title:graph=yes,refs=yes

# 画面を垂直方向に分割する（左右分割）
set vertical-split = yes

# 垂直分割時の右側ビュー（diff表示領域）の幅を60%に設定
# デフォルトは50%だが、diffを見やすくするため右側を広めに確保
set split-view-width = 60%

# 水平分割したウィンドウの下画面サイズを % で指定（行数指定も可）
# set split-view-height = 80%

# 差分の前後の表示行数（diff-context)を指定
set diff-context = 6

# ========================================
# git-delta統合
# ========================================
# Dキー: deltaによる通常のdiff表示
# Sキー: deltaによるside-by-side diff表示
# 参考: https://gist.github.com/kmatt/4ee3c24ab077ae556fb15563fd08469b

# diffビューでdeltaを使用
bind diff D !git show %(commit) | delta --paging always --dark
bind diff S !git show %(commit) | delta --paging always --dark --side-by-side

# stageビューでdeltaを使用
bind stage D !git diff %(file) | delta --paging always --dark
bind stage S !git diff %(file) | delta --paging always --dark --side-by-side

# statusビューでdeltaを使用
bind status D !git diff %(file) | delta --paging always --dark
bind status S !git diff %(file) | delta --paging always --dark --side-by-side
