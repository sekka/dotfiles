{
  "env": {
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_MONITOR_GHOSTTY_ASKED": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(basename:*)",
      "Bash(bash:*)",
      "Bash(brew:*)",
      "Bash(bun:*)",
      "Bash(bunx:*)",
      "Bash(cat:*)",
      "Bash(claude help:*)",
      "Bash(coderabbit review:*)",
      "Bash(codesign:*)",
      "Bash(codex review:*)",
      "Bash(command brew bundle)",
      "Bash(copilot:*)",
      "Bash(defaults read:*)",
      "Bash(dprint fmt:*)",
      "Bash(dscl:*)",
      "Bash(echo:*)",
      "Bash(env)",
      "Bash(eza:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fuser:*)",
      "Bash(fzf:*)",
      "Bash(gemini:*)",
      "Bash(gh api:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git restore:*)",
      "Bash(git rm:*)",
      "Bash(gpg:*)",
      "Bash(gpgconf:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(ls -la:*)",
      "Bash(lsof:*)",
      "Bash(mdfind:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(navi *)",
      "Bash(nvim:*)",
      "Bash(node -e:*)",
      "Bash(npx tsc:*)",
      "Bash(oxlint:*)",
      "Bash(printenv:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(sqlite3:*)",
      "Bash(tmux:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "Bash(yazi:*)",
      "Bash(zoxide:*)",
      "Edit(*)",
      "mcp__chrome-devtools__*",
      "mcp__deepwiki__*",
      "mcp__plugin_claude-mem_mem-search__*",
      "mcp__plugin_context7_context7__*",
      "mcp__plugin_playwright_playwright__*",
      "mcp__plugin_serena_serena__*",
      "mcp__sequential-thinking__*",
      "Skill(agent-memory)",
      "Skill(asking-peer)",
      "Skill(commit)",
      "Skill(creating-hooks)",
      "Skill(managing-frontend-knowledge)",
      "Skill(memorizing)",
      "Skill(review-parallel)",
      "Skill(review-pr)",
      "Skill(review-with-claude)",
      "Skill(review-with-coderabbit)",
      "Skill(review-with-codex)",
      "Skill(review-with-copilot)",
      "Skill(review-with-gemini)",
      "Skill(review-with-multi-ai)",
      "Skill(writing-documentation)",
      "WebSearch",
      "Write(*)"
    ],
    "deny": [
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(sudo:*)",
      "Read(./.env.*)",
      "Read(.env.*)",
      "Read(.env.development)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.env)",
      "Read(**/.env.*)",
      "Read(**/.env.development)",
      "Read(**/.env.local)",
      "Read(**/.env.production)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Read(**/*token*)",
      "Read(**/secrets/**)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(.env.development)",
      "Write(.env.local)",
      "Write(.env.production)",
      "Write(.env)",
      "Write(**/.env.development)",
      "Write(**/.env.local)",
      "Write(**/.env.production)",
      "Write(**/.env)",
      "Write(**/*secret*)"
    ],
    "ask": [
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(git merge:*)",
      "Bash(rm:*)",
      "Bash(wget:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/validate-command.ts"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/protect-files.sh"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash $HOME/.claude/hooks/protect-read.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "ccm hook PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/lint-format.ts --mode=fix --file=$FILE_PATH"
          },
          {
            "type": "command",
            "command": "bash $HOME/dotfiles/scripts/development/sort-permissions.sh --file $FILE_PATH"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "ccm hook PostToolUse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/claude-notify.ts"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "ccm hook Stop"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash|Task|Read|Write|Edit|WebFetch|WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/claude-notify.ts"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/claude-notify.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|auth_success|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/claude-notify.ts"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "ccm hook Notification"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun $HOME/dotfiles/scripts/development/claude-notify.ts"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "ccm hook UserPromptSubmit"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline.ts"
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": false,
    "commit-commands@claude-plugins-official": false,
    "context7@claude-plugins-official": true,
    "figma@claude-plugins-official": false,
    "firebase@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": false,
    "github@claude-plugins-official": false,
    "hookify@claude-plugins-official": false,
    "playwright@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": false,
    "serena@claude-plugins-official": true,
    "slack@claude-plugins-official": false,
    "vercel@claude-plugins-official": false,
    "claude-mem@thedotmack": false,
    "elevator-music@sevii-agent-marketplace": false,
    "claude-mem-japanese@claude-mem-jp": false,
    "claude-code-harness@claude-code-harness-marketplace": false,
    "Notion@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": false,
    "feature-dev@claude-plugins-official": false,
    "example-skills@anthropic-agent-skills": false,
    "greptile@claude-plugins-official": false,
    "document-skills@anthropic-agent-skills": false,
    "code-simplifier@claude-plugins-official": false,
    "ask-claude@hiropon-plugins": true,
    "ask-codex@hiropon-plugins": false,
    "ask-gemini@hiropon-plugins": false,
    "peer@hiropon-plugins": true,
    "claude-code-setup@claude-plugins-official": false,
    "claude-md-management@claude-plugins-official": true,
    "mgrep@Mixedbread-Grep": true
  },
  "language": "Japanese",
  "alwaysThinkingEnabled": true,
  "plansDirectory": "./plans"
}
