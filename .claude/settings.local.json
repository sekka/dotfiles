{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git diff:*)",
      "Bash(git restore:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mise where:*)",
      "Bash(mise install:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "mcp__plugin_serena_serena__*",
      "mcp__plugin_playwright_playwright__*",
      "WebFetch(domain:*)",
      "WebSearch",
      "SlashCommand(/pr)"
    ],
    "deny": [
      "Read(./.env.*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "deepwiki",
    "sequential-thinking"
  ]
}
