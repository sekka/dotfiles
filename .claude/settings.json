{
  "env": {
    "SLACK_WEBHOOK_URL": ""
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '✅ 処理完了時刻: '$(date '+%Y年%m月%d日（%a）%H:%M')"
          },
          // {
          //   "type": "command",
          //   "command": "afplay /System/Library/Sounds/Funk.aiff"
          // },
          {
            "type": "command",
            "command": "npx ccusage@latest"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff"
          },
          {
            "type": "command",
            "command": "PROJECT_NAME=$(basename \"$PWD\") && TIMESTAMP=$(date '+%Y年%m月%d日（%a）%H:%M') && MESSAGE=\"Claude Code通知 - ${PROJECT_NAME} - ${TIMESTAMP}\" && curl -X POST -H 'Content-type: application/json' -d \"{\\\"text\\\": \\\"$MESSAGE\\\"}\" \"$SLACK_WEBHOOK_URL\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}